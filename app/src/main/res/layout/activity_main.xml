<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFBE6"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="72dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:accessibilityLiveRegion="none"
            android:fontFamily="@font/playfair_display"
            android:shadowColor="#E94D1E"
            android:text="Классический греческий салат"
            android:textAlignment="center"
            android:textColor="#D67B60"
            android:textColorHighlight="#E65100"
            android:textColorHint="#D67B60"
            android:textDirection="firstStrong"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="Это рецепт из старой, привезенной из Греции, кулинарной книги. Секрет салата — свежайшие овощи и хорошая фета. Иначе салат получается достаточно обычный, хотя и приготовленный по всем правилам. Пахнет летом, морем и отдыхом..."
                android:textAllCaps="false"
                android:textColor="#37966F"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Switch
            android:id="@+id/switch3"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#FFFBE6"
            android:backgroundTint="#FFFBE6"
            android:fontFamily="@font/playfair_display"
            android:text="Без глютена"
            android:textColor="#37966F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="Добавить в избранное"
            android:textColor="#37966F"
            android:textColorHint="#37966F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B9E4C9"
            android:fontFamily="@font/oswald"
            android:text="ToggleButton"
            android:textColor="#37966F"

            android:textColorHighlight="#E6DFDF"
            android:textOff="ON"
            android:textOn="OFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D67B60"
            android:ems="10"
            android:fontFamily="@font/playfair_display"
            android:gravity="fill_horizontal"
            android:inputType="textPersonName"
            android:text="Введите ингредиент для поиска"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#37966F"
            android:textColorHighlight="#01579B"
            android:textColorHint="#0D47A1"
            android:textColorLink="#0D47A1"
            android:textCursorDrawable="@null"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B9E4C9"
            android:backgroundTint="#B9E4C9"
            android:fontFamily="@font/oswald"
            android:selectAllOnFocus="false"
            android:text="Выбрать"
            android:textAlignment="center"
            android:textColor="#37966F"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:fontFamily="@font/playfair_display"
                android:text="Калории"
                android:textAlignment="center"
                android:textColor="#379666"
                android:textColorLink="#379666" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="Белки"
                android:textAlignment="center"
                android:textColor="#379666"
                android:textColorLink="#379666"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:fontFamily="@font/playfair_display"
                android:text="Жиры"
                android:textAlignment="center"
                android:textColor="#379666"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="400"
                android:textAlignment="center"
                android:textColor="#379666"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="80"
                android:textAlignment="center"
                android:textColor="#379666"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#379666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="Ингредиенты"
                android:textAlignment="center"
                android:textColor="#379666" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:text="Меню"
                android:textAlignment="center"
                android:textColor="#379666"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B9E4C9"
            android:backgroundTint="#B9E4C9"
            android:fontFamily="@font/oswald"
            android:text="Далее"
            android:textColor="#379666"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>